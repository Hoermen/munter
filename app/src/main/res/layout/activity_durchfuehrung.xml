<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="4"
    android:columnCount="4"
    tools:context=".Durchfuehrung"
    android:clickable="true"
    android:focusableInTouchMode="true">


    <TextView
        android:id="@+id/title"
        android:layout_columnSpan="3"
        android:layout_columnWeight="3"
        android:layout_row="0"
        android:layout_margin="1dp"
        android:padding="1dp"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:background="@drawable/border"
        android:text="Titel" />

    <LinearLayout
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_rowWeight="0">

        <Button
            android:id="@+id/timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Timer" />

        <TextView
            android:id="@+id/Chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"/>

            <Button
            android:id="@+id/exit"
            android:padding="1dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:text="Beenden"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_rowWeight="0"
        android:layout_columnWeight="4"
        android:layout_columnSpan="4" />

    <TextView
        android:id="@+id/previous"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:layout_rowWeight="20"
        android:background="@drawable/border"
        android:text="vorherige Phase" />

    <TextView
        android:id="@+id/current"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:layout_rowWeight="20"
        android:background="@drawable/border"
        android:text="aktuelle Phase" />

    <TextView
        android:id="@+id/next"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:layout_rowWeight="20"
        android:background="@drawable/border"
        android:text="nächste Phase" />

    <TextView
        android:id="@+id/materials"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:layout_rowWeight="6"
        android:background="@drawable/border"
        android:text="Materialien" />

    <LinearLayout
        android:id="@+id/notes"
        android:orientation="vertical"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_rowWeight="6"
        android:layout_margin="1dp"
        android:padding="5dp"
        android:layout_columnSpan="2"
        android:layout_columnWeight="2"
        android:background="@drawable/border">

        <TextView
            android:id="@+id/textNotizen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notizen" />

        <EditText
            android:id="@+id/editTextNotes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:hint="Notizen hier hinzufügen" />
    </LinearLayout>

</GridLayout>