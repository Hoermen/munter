<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Durchfuehrung"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:id="@+id/duringLesson"
    android:orientation="vertical"
    android:weightSum="26">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:weightSum="6">

        <TextView
            android:id="@+id/titleStunde"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="Titel" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ZoomOut"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_width="40dp" />
        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/ZoomIn"
            android:scaleType="fitXY"
            android:layout_gravity="center"
            android:layout_height="40dp"
            android:layout_width="40dp" />
        <TextView
            android:id="@+id/timeStunde"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:gravity="center"
            android:padding="1dp"
            android:text="vergangene Zeit" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Timer" />

            <TextView
                android:id="@+id/Chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00" />


        </LinearLayout>
        <Button
            android:id="@+id/exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="1dp"
            android:padding="5dp"
            android:text="Stunde beenden"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="20">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/PlanEntry"
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="19">

        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal">
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/previous"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:text="letzte Stunde" />
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/border">

            <TextView
                android:id="@+id/current"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:text="aktuelle Phase" />
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/border">
            <TextView
                android:id="@+id/next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:text="nächste Phase" />

        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_height="0dp"
        android:layout_weight="5">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border">
            <TextView
                android:id="@+id/materials"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:padding="5dp"
                android:text="Materialien"
                android:textColorLink="@color/colorText"
                android:lineSpacingExtra="10dp"/>

        </ScrollView>


        <LinearLayout
            android:id="@+id/notes"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/textNotizen"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="top"
                    android:text="Notizen" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:text="Zeichnen"
                    android:layout_weight="2"
                    android:id="@+id/buttonDraw" >

                </Button>
            </LinearLayout>

            <EditText
                android:id="@+id/editTextNotes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Notizen hier hinzufügen"
                android:inputType="textMultiLine" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>